<%- include("partials/header.ejs") -%>

    <h1>Compose</h1>

    <form class="form-horizontal" action="/compose" method="post">

        <div class="form-horisontal">
            <div class="form-group">
                <div>
                    <label for="">Title</label>
                    <input class="col-md-12 col-sm-6" placeholder="Post Name" type="text" name="postTitle" id="">
                </div>
            </div>
        </div>
        <div class="form-horisontal">
            <div class="form-group">
                <div>
                    <label for="">Text</label>
                    <textarea class="form-control" rows="3" cols="30" placeholder="Text" required name="postBody"></textarea>
                    <button type="submit" name="publishButton" class="btn btn-primary">Publish</button>
                </div>
            </div>
        </div>

    </form>

    <%- include("partials/footer.ejs") -%>
